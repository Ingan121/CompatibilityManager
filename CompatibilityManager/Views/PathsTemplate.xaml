<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:CompatibilityManager.ViewModels"
                    xmlns:lex="http://wpflocalizeextension.codeplex.com">
    <DataTemplate DataType="{x:Type vm:PathsViewModel}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ScrollViewer Grid.Row="0">
                <ListBox ItemsSource="{Binding Executables}" />
            </ScrollViewer>

            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <Button Content="{lex:Loc AddFolder}"
                        Command="{Binding AddFolderCommand}" />

                <Button Content="{lex:Loc AddFiles}"
                        Command="{Binding AddFilesCommand}" />

                <Button Content="{lex:Loc Reset}"
                        Command="{Binding ResetCommand}" />
            </StackPanel>

            <Button Grid.Row="2"
                    Content="{lex:Loc Apply}"
                    Command="{Binding ApplyCommand}" />
        </Grid>
    </DataTemplate>
</ResourceDictionary>